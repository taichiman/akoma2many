#!/usr/bin/env ruby
require 'json'
require 'awesome_print'
require 'rexml/document'
require_relative 'parser'
require_relative 'utils'
require_relative 'settings'
require_relative 'convert'

require 'pry'

include REXML
include Utils

Utils::LOG = true
puts 'start..'.green

unless ARGV.empty?
  OUTPUT_PATH = output_path_create(cli_options)

  convert(ARGV)
else
  puts print_help
  exit 0

end

